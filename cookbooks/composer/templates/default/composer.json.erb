{
	"require": {
	<% package_list = [] %>
	<% @packages.each do |package, version| -%>
		<% package_list.push("\"#{package}\": \"#{version}\"") %>
	<% end -%>
		<%= package_list.join(",\n\t\t") %>
	},
	"minimum-stability":"<%= @stability %>",
	"scripts": {
	<% scripts_list = [] %>
	<% @scripts.each do |cmd, path| -%>
		<% scripts_list.push("\"#{cmd}\": \"#{path}\"") %>
	<% end -%>
		<%= scripts_list.join(",\n\t\t") %>
	},
	"config": {
	<% config_list = [] %>
	<% @config.each do |cmd, path| -%>
		<% config_list.push("\"#{cmd}\": \"#{path}\"") %>
	<% end -%>
		<%= config_list.join(",\n\t\t") %>
	}
}